    <bean id="DESIGN_IG" class="pst.arm.client.modules.datagrid.domain.DTable" lazy-init="false">
        <property name="columnBuilders">
            <list>
                <ref bean="BUILDER_DESIGN_IG__ID_REC"/>
                <ref bean="BUILDER_DESIGN_IG__CODE"/>
                <ref bean="BUILDER_DESIGN_IG__SSP_DESIGNVERSION_1_NUM_VERSION"/>
                <ref bean="BUILDER_DESIGN_IG__EXECUTION_TYPE"/>
                <ref bean="BUILDER_DESIGN_IG__NAME"/>
                <ref bean="BUILDER_DESIGN_IG__INVENTORY_NUMBER"/>
                <ref bean="BUILDER_DESIGN_IG__INTERACTING_SYST_NAME"/>
                <ref bean="BUILDER_DESIGN_IG__IS_ANNUL"/>
                <ref bean="BUILDER_DESIGN_IG__ID_SEARCH"/>
                <ref bean="BUILDER_DESIGN_IG__ISFOLDER"/>
            </list>
        </property>
        <property name="tables">
            <map>
                <entry key="MAIN" value="SPR_DESIGN_1" />
                <entry key="SSP_DESIGNVERSION_1" value="SSP_DESIGNVERSION_1" />
                <entry key="INTERACTING_SYST" value="INTERACTING_SYST" />
            </map>
        </property>
        <property name="tableJoins">
            <list>
                <bean class="pst.arm.client.modules.datagrid.domain.DTableJoin">
                    <property name="tableOne" value="MAIN"/>
                    <property name="tableTwo" value="SSP_DESIGNVERSION_1"/>
                    <property name="relationType" value="INNER"/>
                    <property name="columnJoins">
                        <list>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="ID"/>
                                <property name="columnNameTableTwo" value="ID_DESIGN"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="ID_VERSION"/>
                                <property name="columnNameTableTwo" value="ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="INTERACTING_SYST_ID"/>
                                <property name="columnNameTableTwo" value="INTERACTING_SYST_ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                        </list>
                    </property>
                </bean>
                
                <bean class="pst.arm.client.modules.datagrid.domain.DTableJoin">
                    <property name="tableOne" value="MAIN"/>
                    <property name="tableTwo" value="INTERACTING_SYST"/>
                    <property name="relationType" value="INNER"/>
                    <property name="columnJoins">
                        <list>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="INTERACTING_SYST_ID"/>
                                <property name="columnNameTableTwo" value="INTERACTING_SYST_ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="caption" value="Чертежи"/>
        <property name="queryName" value="DESIGN_IG"/>
        <property name="isFilterShowAtStart" value="true"/>
        <property name="strOrderByStart" value="MAIN.NAME ASC "/>
        <property name="countRowsInFiltrColumn" value="3"/>
        <property name="isDistinct" value="true"/>
    </bean>
</beans>