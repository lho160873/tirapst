    <bean id="BUILDER_DOC_FILE_IG__FILENAME" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderFile" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="FILENAME"/>
