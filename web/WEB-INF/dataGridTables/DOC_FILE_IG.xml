                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="BUILDER_DOC_FILE_IG__USER_WORKER_SHORT_NAME" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderString" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="SHORT_NAME"/>
