    <bean id="BUILDER_DOC_FILE_IG__DATE_CORR" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderDate"
          lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="DATE_CORR"/>
