    <!-- описываем сам "запрос" -->
    <bean id="DOC_FILE_IG" class="pst.arm.client.modules.datagrid.domain.DTable" lazy-init="false">
        <property name="columnBuilders">
            <list>
                <ref bean="BUILDER_DOC_FILE_IG__FILE_ID"/>
                <ref bean="BUILDER_DOC_FILE_IG__DOC_ID"/>
                <ref bean="BUILDER_DOC_FILE_IG__FILENAME"/>
                <ref bean="BUILDER_DOC_FILE_IG__COMMENT"/>
                <ref bean="BUILDER_DOC_FILE_IG__SRVR_NAME"/>
                <ref bean="BUILDER_DOC_FILE_IG__ROOT_PATH"/>
                <ref bean="BUILDER_DOC_FILE_IG__EXTENSION"/>
                <ref bean="BUILDER_DOC_FILE_IG__USER_WORKER_SHORT_NAME"/>
                <ref bean="BUILDER_DOC_FILE_IG__DATE_CORR"/>
                <ref bean="BUILDER_DOC_FILE_IG__DOC_TYPE_ID"/>
                <ref bean="BUILDER_DOC_FILE_IG__CREATOR_ID"/>
                <ref bean="BUILDER_DOC_FILE_IG__FILE_ROOT_ID"/>
            </list>
        </property>
        <property name="tables">
            <map>
                <entry key="MAIN" value="DOC_FILE"/>
                <entry key="USER_WORKER" value="USER_WORKER" />
            </map>
        </property>
        <property name="caption" value="Прикрепленные файлы"/>
        <property name="queryName" value="DOC_FILE_IG"/>
        <property name="isFiltrShow" value="false"/>        
        <property name="postFields">
            <list>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="FILENAME"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="DOC_ID"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="COMMENT"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="SRVR_NAME"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="ROOT_PATH"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="FILE_ROOT_ID"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="DOC_TYPE_ID"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
                <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                    <property name="columnName" value="CREATOR_ID"/>
                    <property name="tableAlias" value="MAIN"/>
                </bean>
            </list>
        </property>

        <property name="groupByAll" value="true"/>
        <property name="tableJoins">
            <list>
                <bean class="pst.arm.client.modules.datagrid.domain.DTableJoin">
                    <property name="tableOne" value="MAIN"/>
                    <property name="tableTwo" value="USER_WORKER"/>
                    <property name="relationType" value="LEFT"/>
                    <property name="columnJoins">
                        <list>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="CREATOR_ID"/>
                                <property name="columnNameTableTwo" value="USER_ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>

    </bean>

</beans>