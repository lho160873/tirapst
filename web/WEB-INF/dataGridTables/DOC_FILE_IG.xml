    <bean id="BUILDER_DOC_FILE_IG__FILE_ID" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderNumber" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="FILE_ID"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="FILE_ID"/>
                        <property name="caption" value="Код файла"/>
                        <property name="isKey" value="true"/>
                        <property name="isVisible" value="false"/>
                        <property name="isVisibleEdit" value="false"/>
                        <property name="isFiltr" value="false"/>
                        <property name="isAutoincrement" value="true"/>
                        <property name="columnProperty" ref="DCPIntegerNotNegative"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

