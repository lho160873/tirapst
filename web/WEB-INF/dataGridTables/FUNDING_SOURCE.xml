<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- ************************************************* -->
    <!-- FUNDING_SOURCE -->
    <!-- ************************************************* -->  
    <bean id="BUILDER_FUNDING_SOURCE__FUNDING_SOURCE_ID" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderNumber" lazy-init="false">
        <property name="columns">
           <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">  
                        <property name="columnName" value="FUNDING_SOURCE_ID"/>
                        <property name="tableAlias" value="MAIN"/>     
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="FUNDING_SOURCE_ID"/>
                        <property name="caption" value="Код"/>
                        <property name="isKey" value="TRUE"/>
                        <property name="columnProperty" ref="DCPIntegerNotNegative"/>
                    </bean>
                </entry>
            </map>
        </property>     
    </bean>

    <bean id="BUILDER_FUNDING_SOURCE__NAME"
          class="pst.arm.client.modules.datagrid.domain.DColumnBuilderString" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="NAME"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="NAME"/>
                        <property name="caption" value="Название"/>
                        <property name="columnProperty" ref="DCPString20"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <!-- описываем сам "запрос" -->
    <bean id="FUNDING_SOURCE" class="pst.arm.client.modules.datagrid.domain.DTable" lazy-init="false">
        <property name="columnBuilders">
            <list>
                <ref bean="BUILDER_FUNDING_SOURCE__FUNDING_SOURCE_ID"/>
                <ref bean="BUILDER_FUNDING_SOURCE__NAME"/>
            </list>
        </property>
        <property name="tables">
            <map>
                <entry key="MAIN" value="FUNDING_SOURCE"/>
            </map>
        </property>
        <property name="caption" value="Источник финансирования"/>
        <property name="queryName" value="FUNDING_SOURCE"/>
    </bean>

</beans>