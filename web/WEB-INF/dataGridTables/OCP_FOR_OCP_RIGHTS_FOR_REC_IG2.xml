<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- ************************************************* -->
    <!-- OCP_FOR_OCP_RIGHTS_FOR_REC_IG2 -->
    <!-- ************************************************* -->  
    <bean id="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__OCP_ID" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderNumber" lazy-init="false">
        <property name="columns">
           <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">  
                        <property name="columnName" value="OCP_ID"/>
                        <property name="tableAlias" value="MAIN"/>     
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="OCP_ID"/>
                        <property name="caption" value="Код ОКП"/>
                        <property name="isEditable" value="false"/>
                        <property name="isInserted" value="false"/>
                        <property name="isAutoincrement" value="true"/>
                        <property name="isFiltr" value="true"/>
                        <property name="isVisible" value="true"/>
                        <property name="isKey" value="true"/>
                        <property name="columnProperty" ref="DCPIntegerNotNegative"/>
                        <property name="isNotNull" value="false"/>
                    </bean>
                </entry>
            </map>
        </property>     
    </bean>
    
    <bean id="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__OCP_DATE" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderDate"
          lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="OCP_DATE"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="OCP_DATE"/>
                        <property name="caption" value="Дата"/>
                        <property name="isFiltr" value="false"/>
                        <property name="columnProperty" ref="DCPDateShort"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="BUILDER_OCP_VO__OCP_DATE_FROM" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderDateFrom"
          lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="OCP_DATE_FROM"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="OCP_DATE"/>
                        <property name="caption" value="Дата от"/>
                        <property name="columnProperty" ref="DCPDateShort"/>
                        <property name="isFiltr" value="true"/>
                        <property name="isVisible" value="false"/>
                        <property name="isEditable" value="false"/>
                        <property name="isInserted" value="false"/>
                        <property name="isVisibleEdit" value="false"/>
                        <property name="isHidden" value="true"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    <bean id="BUILDER_OCP_VO__OCP_DATE_TO" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderDateTo"
          lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="OCP_DATE_TO"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="OCP_DATE"/>
                        <property name="caption" value="Дата до"/>
                        <property name="columnProperty" ref="DCPDateShort"/>
                        <property name="isFiltr" value="true"/>
                        <property name="isVisible" value="false"/>
                        <property name="isEditable" value="false"/>
                        <property name="isInserted" value="false"/>
                        <property name="isVisibleEdit" value="false"/>
                        <property name="isHidden" value="true"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__ORDER_NUMBER"
          class="pst.arm.client.modules.datagrid.domain.DColumnBuilderString" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="ORDER_NUMBER"/>
                            <property name="tableAlias" value="ORDER_D"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="ORDER_NUMBER"/>
                        <property name="caption" value="Номер заказа"/>
                        <property name="isNotNull" value="true"/>
                        <property name="columnProperty" ref="DCPString22"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__WORK_NAME" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderString"
          lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="WORK_NAME"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="WORK_NAME"/>
                        <property name="caption" value="Тема (наименование)                                                                "/>
                        <property name="columnProperty" ref="DCPString255"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__DEPART_NAME" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderString" lazy-init="false">
        <property name="columns">
           <map>
                 <entry>
                    <key>
                        <bean  class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="NAME"/>
                            <property name="tableAlias" value="DEPART"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="NAME"/>
                        <property name="caption" value="Головное подразделение"/>
                        <property name="columnProperty" ref="DCPString150"/>
                        <property name="isNotNull" value="TRUE"/>
                    </bean>
                </entry>
            </map>
        </property>        
    </bean>

    <!-- описываем сам "запрос" -->
    <bean id="OCP_FOR_OCP_RIGHTS_FOR_REC_IG2" class="pst.arm.client.modules.datagrid.domain.DTable" lazy-init="false">
        <property name="columnBuilders">
            <list>
                <ref bean="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__OCP_ID"/>
                <ref bean="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__OCP_DATE"/>
                <ref bean="BUILDER_OCP_VO__OCP_DATE_FROM"/>
                
                <ref bean="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__ORDER_NUMBER"/>
                <ref bean="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__WORK_NAME"/>
                <ref bean="BUILDER_OCP_FOR_OCP_RIGHTS_FOR_REC_IG2__DEPART_NAME"/>
                <ref bean="BUILDER_OCP_VO__OCP_DATE_TO"/>
            </list>
        </property>
        <property name="tables">
            <map>
                <entry key="MAIN" value="OCP"/>
                <entry key="ORDER_D" value="ORDER_D"/>
                <entry key="DEPART" value="DEPART"/>
            </map>
        </property>
        <property name="countRowsInFiltrColumn" value="4"/>
        <property name="isFilterShowAtStart" value="true"/>
        <property name="caption" value="ОКП"/>
        <property name="queryName" value="OCP_FOR_OCP_RIGHTS_FOR_REC_IG2"/>
        <property name="filterColumnWidth" value="315"/>
        <property name="labelFiltrWidth" value="150"/>
        <property name="isShowReport" value="FALSE"/>
        <property name="tableJoins">
            <list>
                <bean class="pst.arm.client.modules.datagrid.domain.DTableJoin">
                    <property name="tableOne" value="MAIN"/>
                    <property name="tableTwo" value="ORDER_D"/>
                    <property name="relationType" value="LEFT"/>
                    <property name="columnJoins">
                        <list>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="ORDER_ID"/>
                                <property name="columnNameTableTwo" value="ORDER_ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                        </list>
                    </property>
                </bean> 
                <bean class="pst.arm.client.modules.datagrid.domain.DTableJoin">
                    <property name="tableOne" value="MAIN"/>
                    <property name="tableTwo" value="DEPART"/>
                    <property name="relationType" value="LEFT"/>
                    <property name="columnJoins">
                        <list>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="DEPART_ID"/>
                                <property name="columnNameTableTwo" value="DEPART_ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                        </list>
                    </property>
                </bean>               
            </list>
        </property>
        
    </bean>

</beans>