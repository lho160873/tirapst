                        <property name="isVisibleEdit" value="false"/>
                        <property name="isInserted" value="false"/>
                        <property name="columnProperty" ref="DCPDecimalNotNegative38_4_00"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="BUILDER_OCP_TRIP_SUMM_IT__SUM_TRAVEL_COST1" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderNumber" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="SUM_TRAVEL_COST1"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="SUM_TRAVEL_COST1"/>
                        <property name="caption" value="Поезд сумма, руб."/>
                        <property name="isVisibleEdit" value="false"/>
                        <property name="isInserted" value="false"/>
                        <property name="columnProperty" ref="DCPDecimalNotNegative38_4_00"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="BUILDER_OCP_TRIP_SUMM_IT__IN_TOTAL1" class="pst.arm.client.modules.datagrid.domain.DColumnBuilderNumber" lazy-init="false">
        <property name="columns">
            <map>
                <entry>
                    <key>
                        <bean class="pst.arm.client.modules.datagrid.domain.SKeyForColumn">
                            <property name="columnName" value="IN_TOTAL1"/>
                            <property name="tableAlias" value="MAIN"/>
                        </bean>
                    </key>
                    <bean class="pst.arm.client.modules.datagrid.domain.DColumn">
                        <property name="name" value="IN_TOTAL1"/>
