    <!-- описываем сам "запрос" -->
    <bean id="OCP_TRIP_SUMM_IT_VO" class="pst.arm.client.modules.datagrid.domain.DTable" lazy-init="false">
        <property name="columnBuilders">
            <list>
                <ref bean="BUILDER_OCP_TRIP_SUMM_IT__OCP_ID"/>
                <ref bean="BUILDER_OCP_TRIP_SUMM_IT__CONTRACT_STAGE_ID"/>
                <ref bean="BUILDER_OCP_TRIP_SUMM_IT__SCS_STAGE_NUMBER"/>
                <ref bean="BUILDER_OCP_TRIP_SUMM_IT__SUM_DAY_COST1"/>
                <ref bean="BUILDER_OCP_TRI_SUMM_IT__SUM_ROOM_COST1"/>
                <ref bean="BUILDER_OCP_TRIP_SUMM_IT__SUM_TRAVEL_COST1"/>
                <ref bean="BUILDER_OCP_TRIP_SUMM_IT__IN_TOTAL1"/>
            </list>
        </property>
        <property name="tables">
            <map>
                <entry key="MAIN" value="OCP_TRIP_SUMM_IT"/>
                <entry key="SCS" value="SERV_CONTRACT_STAGE"/>
            </map>
        </property>

        <property name="reportTemplate" value="OCP.TRIP_SUMM_IT"/>
        <property name="reportParams">
            <map>
                <entry key="ocpId" value="MAIN:OCP_ID"/>
            </map>
        </property>
        <property name="reportExportFormat" value="pdf"/>

        <property name="caption" value="Итоги"/>
        <property name="tableJoins">
            <list>
                <bean class="pst.arm.client.modules.datagrid.domain.DTableJoin">
                    <property name="tableOne" value="MAIN"/>
                    <property name="tableTwo" value="SCS"/>
                    <property name="relationType" value="INNER"/>
                    <property name="columnJoins">
                        <list>
                            <bean class="pst.arm.client.modules.datagrid.domain.DColumnJoin">
                                <property name="columnNameTableOne" value="CONTRACT_STAGE_ID"/>
                                <property name="columnNameTableTwo" value="CONTRACT_STAGE_ID"/>
                                <property name="columnRelationType" value="AND"/>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="queryName" value="OCP_TRIP_SUMM_IT_VO"/>
    </bean>
</beans>
